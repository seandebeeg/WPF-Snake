<Page x:Class="WindowsSnake.ScoresPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowsSnake"
      mc:Ignorable="d" 
      d:DesignHeight="732" d:DesignWidth="700"
      Title="ScoresPage">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="2*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <TextBlock Text="Scores" FontFamily="/Assets/SnakeDemo-lgEeD.otf#Snake Demo" HorizontalAlignment="Center" FontSize="50" Grid.Row="0"/>
    <ListView x:Name="ScoresListView"  Grid.Row="1">
      <ListView.View>
        <GridView>
          <GridViewColumn Header="Score" DisplayMemberBinding="{Binding ScoreNumber}" Width="330"/>
          <GridViewColumn Header="Date" DisplayMemberBinding="{Binding DateObtained}" Width="330"/>
        </GridView>
      </ListView.View>
    </ListView>
    <Button Grid.Row="3" Content="Main Menu" Height="40px" Width="100" Click="MainMenu_Click" HorizontalAlignment="Right" Margin="0,0,15,0"/>
    <Button Grid.Row="3" Content="Delete All" Height="40px" Width="100" HorizontalAlignment="Left" Margin="15,0,0,0"/>
  </Grid>
</Page>
