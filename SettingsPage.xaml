<Page x:Class="WindowsSnake.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowsSnake"
      mc:Ignorable="d" 
      d:DesignHeight="732" d:DesignWidth="700"
      Title="SettingsPage">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="6*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <ListView x:Name="SettingsListView"
           Grid.Row="1"
           Margin="10,10,10,10"
           ScrollViewer.VerticalScrollBarVisibility="Auto">
      <ListView.GroupStyle>
        <GroupStyle>
          <GroupStyle.HeaderTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding Name}" 
                      FontWeight="Bold" 
                      FontSize="20" 
                      Margin="5"/>
            </DataTemplate>
          </GroupStyle.HeaderTemplate>
        </GroupStyle>
      </ListView.GroupStyle>
      <ListView.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal" Margin="5" CanVerticallyScroll="True">
            <CheckBox IsChecked="{Binding IsEnabled}"/>
            <TextBlock Text="{Binding Name}" Margin="5,0,0,0"/>
          </StackPanel>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    <TextBlock Text="Settings" FontSize="50" HorizontalAlignment="Center" FontFamily="/Assets/SnakeDemo-lgEeD.otf#Snake Demo"/>
    <Button Grid.Row="2" Height="38px" Width="100px" HorizontalAlignment="Left" Content="Main Menu" Click="MainMenu_Click" Style="{StaticResource WindowButtonTriggers}" Background="#FFEB3A3A" Foreground="White" FontWeight="Bold"/>
    <Button Grid.Row="2" Height="38px" Width="100px" HorizontalAlignment="Center" Content="Reset" Style="{StaticResource WindowButtonTriggers}" Background="Orange" Foreground="White" FontWeight="Bold"/>
    <Button Grid.Row="2" Height="38px" Width="100px" HorizontalAlignment="Right" Content="Save" Style="{StaticResource WindowButtonTriggers}" Background="LightGreen" Foreground="White" FontWeight="Bold"/>
  </Grid>
</Page>
