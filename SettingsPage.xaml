<Page x:Class="WindowsSnake.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowsSnake"
      mc:Ignorable="d" 
      d:DesignHeight="732" d:DesignWidth="700"
      Title="SettingsPage">
  <Grid>
    <StackPanel x:Name="SettingsPanel">
      <TextBlock Text="Settings" FontSize="50" HorizontalAlignment="Center" FontFamily="/Assets/SnakeDemo-lgEeD.otf#Snake Demo"/>
      <Grid Height="682px">
        <Button Height="38px" Width="100px" HorizontalAlignment="Left" Content="Main Menu" Click="MainMenu_Click" Style="{StaticResource WindowButtonTriggers}" Background="#FFEB3A3A" Foreground="White" FontWeight="Bold"/>
        <Button Height="38px" Width="100px" HorizontalAlignment="Center" Content="Reset" Style="{StaticResource WindowButtonTriggers}" Background="Orange" Foreground="White" FontWeight="Bold"/>
        <Button Height="38px" Width="100px" HorizontalAlignment="Right" Content="Save" Style="{StaticResource WindowButtonTriggers}" Background="LightGreen" Foreground="White" FontWeight="Bold"/>
      </Grid>
    </StackPanel>
  </Grid>
</Page>
