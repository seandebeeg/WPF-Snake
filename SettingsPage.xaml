<Page x:Class="WindowsSnake.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowsSnake"
      mc:Ignorable="d" 
      d:DesignHeight="732" d:DesignWidth="700"
      Title="SettingsPage">

  <Grid>
    <StackPanel x:Name="SettingsPanel">
      <TextBlock Text="Settings" FontSize="50" HorizontalAlignment="Center" FontFamily="/Assets/SnakeDemo-lgEeD.otf#Snake Demo"/>
      <Grid Height="682px">
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
          <TextBlock Text="Game" FontSize="30"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
          <TextBlock Text="Preferences" FontSize="30"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
          <TextBlock Text="Controls" FontSize="30"/>
        </StackPanel>
        <Button Grid.Row="3" Height="38px" Width="100px" HorizontalAlignment="Left" Content="Main Menu" Click="MainMenu_Click"/>
        <Button Grid.Row="3" Height="38px" Width="100px" HorizontalAlignment="Center" Content="Reset"/>
        <Button Grid.Row="3" Height="38px" Width="100px" HorizontalAlignment="Right" Content="Save"/>
      </Grid>
    </StackPanel>
  </Grid>
</Page>
