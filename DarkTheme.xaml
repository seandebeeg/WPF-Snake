<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#222222"/>
  <SolidColorBrush x:Key="PageBackgroundBrush" Color="#222222"/>
  <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
  <SolidColorBrush x:Key="SecondaryTextBrush" Color="#CCCCCC"/>
  <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#333333"/>
  <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FFFFFF"/>

  <Style TargetType="Window">
    <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
  </Style>

  <Style TargetType="Page">
    <Setter Property="Background" Value="{StaticResource PageBackgroundBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
  </Style>

  <Style TargetType="Button">
    <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
    <Setter Property="Foreground" Value="{StaticResource ButtonForegroundBrush}"/>
  </Style>
</ResourceDictionary>