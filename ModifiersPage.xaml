<Page x:Class="WindowsSnake.ModifiersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:local="clr-namespace:WindowsSnake"
      mc:Ignorable="d" 
      d:DesignHeight="732" d:DesignWidth="700"
      Title="ModifiersPage">

  <Grid>
    <StackPanel>
      <TextBlock Text="Modifiers" FontSize="50px" FontFamily="/Assets/SnakeDemo-lgEeD.otf#Snake Demo" HorizontalAlignment="Center"/>
      <TextBlock x:Name="ScoreMultiplierText" FontSize="35px" FontFamily="Arial" HorizontalAlignment="Center" FontWeight="Bold"/>
    </StackPanel>
    <Button Height="38" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Main Menu" Click="MainMenu_Click"/>
    <Button Height="38" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Left" Content="Mod Info" Click="Info_Click"/>
    <Button Height="38" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Save" Click="Save_Click"/>
    <ListView x:Name="ModifiersListView" Height="600" Margin="10,50,10,50">
      <ListView.GroupStyle>
        <GroupStyle>
          <GroupStyle.HeaderTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding Name}" 
                         FontWeight="Bold" 
                         FontSize="20" 
                         Margin="5"/>
            </DataTemplate>
          </GroupStyle.HeaderTemplate>
        </GroupStyle>
      </ListView.GroupStyle>
      <ListView.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal" Margin="5">
            <CheckBox IsChecked="{Binding IsEnabled}"/>
            <TextBlock Text="{Binding Name}" Margin="5,0,0,0"/>
          </StackPanel>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </Grid>
</Page>