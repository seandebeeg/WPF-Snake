<Page x:Class="WindowsSnake.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowsSnake"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="700"
      Title="GamePage"
      KeyDown="StartGame"
      Focusable="True"
      FocusVisualStyle="{x:Null}"
      x:Name="PageElement">
  <Border BorderBrush="Black" BorderThickness="5" Focusable="False" x:Name="GameBorder">
    <Grid x:Name="GameGrid" Focusable="False">
      <Popup IsOpen="False" x:Name="LoserPopup" StaysOpen="True" Placement="Center" PlacementTarget="{Binding ElementName = GameGrid}">
        <Border BorderThickness="5" CornerRadius="15" Height="350" Width="350">
          <Grid Background="White" x:Name="LoserPopupGrid">
            <TextBlock Text="Game Over" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Content="Play Again" Click="PlayAgain" Style="{StaticResource WindowButtonTriggers}" Height="38px" Width="100px" Background="LightGreen" Foreground="White"/>
            <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Content="Back to Menu" Click="GoToMainMenu" Style="{StaticResource WindowButtonTriggers}" Height="38px" Width="100px" Background="Red" Foreground="White"/>
          </Grid>
        </Border>
      </Popup>
    </Grid>
  </Border>
</Page>
