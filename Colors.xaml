<Page x:Class="WindowsSnake.ColorsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowsSnake"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="732" d:DesignWidth="700"
      Title="Colors"
      Loaded="Page_Loaded">

    <Grid>
      <TextBlock Text="Colors" FontFamily="pack://application:,,,/WindowsSnake;component/Assets/#Snake Demo" HorizontalAlignment="Center" FontSize="50px"/>
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
      <xctk:ColorPicker SelectedColor="Blue" Grid.Column="1" Grid.Row="1" x:Name="ColorSelector" Height="24"/>
      <Button Click="MainMenu_Click">
        <Grid.Row>2</Grid.Row>
        <Grid.Column>1</Grid.Column>
        <Button.Content>Main Menu</Button.Content>
        <Button.Height>38</Button.Height>
        <Button.Width>115</Button.Width>
      </Button>
      <Button Click="Previous_Click">
        <Grid.Row>1</Grid.Row>
        <Grid.Column>0</Grid.Column>
        <Button.Content>Previous</Button.Content>
        <Button.Height>38</Button.Height>
        <Button.Width>115</Button.Width>
      </Button>
      <Button Click="Next_Click">
        <Grid.Row>1</Grid.Row>
        <Grid.Column>2</Grid.Column>
        <Button.Content>Next</Button.Content>
        <Button.Height>38</Button.Height>
        <Button.Width>115</Button.Width>
      </Button>
      <Button Click="Save_Click">
        <Grid.Row>0</Grid.Row>
        <Grid.Column>1</Grid.Column>
        <Button.Content>Save</Button.Content>
        <Button.Height>38</Button.Height>
        <Button.Width>115</Button.Width>
      </Button>
    </Grid>
  </Grid>
</Page>
